<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dat_San">


    <CheckBox
        android:id="@+id/checkBoxSogio"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxChonGio"
        app:layout_constraintStart_toStartOf="@+id/checkBoxChonGio"
        app:layout_constraintTop_toTopOf="@+id/editTextSoGio" />

    <TextView
        android:id="@+id/editTextGio"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@drawable/layout_border"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/editTextNgay"
        app:layout_constraintTop_toBottomOf="@+id/editTextNgay" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="8dp"
        android:text="Giờ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/editTextGio"
        app:layout_constraintEnd_toStartOf="@+id/editTextGio" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="8dp"
        android:text="Số giờ"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/editTextSoGio"
        app:layout_constraintEnd_toStartOf="@+id/editTextSoGio" />

    <ImageView
        android:id="@+id/imageView_DatSan_HinhAnh"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_marginStart="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_DatSan_HinhAnh" />

    <CheckBox
        android:id="@+id/checkBoxChonSan"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:clickable="false"
        app:layout_constraintStart_toEndOf="@+id/spinner1"
        app:layout_constraintTop_toTopOf="@+id/spinner1" />

    <CheckBox
        android:id="@+id/checkBoxChonNgay"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxChonSan"
        app:layout_constraintStart_toStartOf="@+id/checkBoxChonSan"
        app:layout_constraintTop_toTopOf="@+id/editTextNgay" />

    <CheckBox
        android:id="@+id/checkBoxChonGio"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxChonNgay"
        app:layout_constraintStart_toStartOf="@+id/checkBoxChonNgay"
        app:layout_constraintTop_toTopOf="@+id/editTextGio" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Ngày"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/editTextNgay"
        app:layout_constraintEnd_toStartOf="@+id/editTextNgay" />

    <TextView

        android:id="@+id/editTextNgay"
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_border"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/textViewGiaSan" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSoGio">

        <TextView
            android:id="@+id/textView_Ten_DatSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="186dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="185dp"
            android:text="Tên"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNgay_datsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="4dp"
            android:text="Ngày"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Ten_DatSan" />

        <TextView
            android:id="@+id/textViewGio_datsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Giờ"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toEndOf="@+id/textViewNgay_datsan"
            app:layout_constraintTop_toTopOf="@+id/textViewNgay_datsan" />

        <TextView
            android:id="@+id/textViewTongTien_DatSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tổng tiền"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/com_facebook_blue"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/textView_Loaisan_datsan"
            app:layout_constraintTop_toBottomOf="@+id/textView_Loaisan_datsan" />

        <EditText
            android:id="@+id/editTextGhiChu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:text="Ghi chú"
            app:layout_constraintStart_toStartOf="@+id/textViewTongTien_DatSan"
            app:layout_constraintTop_toBottomOf="@+id/textViewTongTien_DatSan" />

        <RadioButton
            android:id="@+id/radioButtonTrucTuyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:text="Thanh toán trực tuyến"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toStartOf="@+id/editTextGhiChu"
            app:layout_constraintTop_toBottomOf="@+id/editTextGhiChu" />

        <RadioButton
            android:id="@+id/radioButtonTaiCho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:text="Thanh toán tại sân"
            app:layout_constraintStart_toStartOf="@+id/radioButtonTrucTuyen"
            app:layout_constraintTop_toBottomOf="@+id/radioButtonTrucTuyen" />

        <Button
            android:id="@+id/buttonXacNhan"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="161dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="162dp"
            android:background="#e8f5fc"
            android:text="Xác nhận"
            android:textColor="#0094fd"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButtonTaiCho" />

        <TextView
            android:id="@+id/textView_Loaisan_datsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Loại sân"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toStartOf="@+id/textViewNgay_datsan"
            app:layout_constraintTop_toBottomOf="@+id/textViewNgay_datsan" />

        <TextView
            android:id="@+id/textViewSoGio_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:text="Số giờ"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintStart_toEndOf="@+id/textViewGio_datsan"
            app:layout_constraintTop_toTopOf="@+id/textViewGio_datsan" />

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/editTextSoGio"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/editTextGio"
        app:layout_constraintTop_toBottomOf="@+id/editTextGio" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Giá: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewGiaSan"
        app:layout_constraintEnd_toStartOf="@+id/textViewGiaSan" />

    <TextView
        android:id="@+id/textViewGiaSan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                  "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/editTextNgay"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

</android.support.constraint.ConstraintLayout>